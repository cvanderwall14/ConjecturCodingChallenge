<h1>Follow Users App</h1>
<button type="button" class="btn btn-default">Create User</button>
<% @users.each do |user| %>
<div class="row">
    <div class="col-md-6"><%= user.name %></div>
    <div class="col-md-2"><%= link_to 'Show', user %></div>
    <div class="col-md-2"><%= link_to 'Edit', edit_user_path(user) %></div>
    <div class="col-md-2"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></div>
</div>
<% end %>