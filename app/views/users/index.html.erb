<h1>Users</h1>
<%= link_to 'New User', new_user_path,  :class => "btn btn-lg btn-default" %>
<% @users.each do |user| %>
<div class="row">
  <div class="col-md-6">
    <%= user.name %>
  </div>
  <div class="col-md-2">
    <%= link_to 'Show', user, :class => "btn btn-default" %>
  </div>
  <div class="col-md-2">
    <%= link_to 'Edit', edit_user_path(user), :class => "btn btn-default" %>
  </div>
  <div class="col-md-2">
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?', :class => "btn btn-default" } %>
  </div>
</div>
<% end %>
